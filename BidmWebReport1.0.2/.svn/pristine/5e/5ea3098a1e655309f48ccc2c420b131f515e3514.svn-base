<h2>角色关联菜单</h2>
   <span class="ui-label">
      <label>角色：</label>
       <p-dropdown [options]="roleList" [(ngModel)]="dropdown_roleId" [style]="{'width':'20em'}" filter="true" (onChange)="selectHandle()" (click)="getAllRole()">
        <ng-template let-role pTemplate="selectedItem">
            <span>{{role.value}}</span>
        </ng-template>
        <ng-template let-role2 pTemplate="item">
                <span>{{role2.label}}</span>
        </ng-template>
    </p-dropdown>
   </span>     
 
<hr>


<p-pickList [source]="unAsignMenuList" [target]="asignMenuList" sourceHeader="Available" targetHeader="Selected" [showSourceControls]=false [showTargetControls]=false>
  <ng-template let-menu pTemplate="item">
      <div class="ui-helper-clearfix">
          <div style="font-size:14px;float:right;margin:15px 5px 0 0">{{menu.menuId}} {{menu.desc==null || menu.desc==""?"":"&"}} {{menu.desc}} </div>
      </div>
  </ng-template>
</p-pickList>
<p-footer>
    <div style="margin-top:0.5em;">
         <p-button label="Save" (onClick)="saveChange()"></p-button> 
         <span style="margin-left:2em;color:darkblue;">{{tip_}}</span>
    </div>
</p-footer>
